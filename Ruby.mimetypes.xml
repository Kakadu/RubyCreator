<?xml version="1.0"?>
<mime-info xmlns='http://www.freedesktop.org/standards/shared-mime-info'>
  <mime-type type="text/x-rubycreator-project">
    <sub-class-of type="text/plain"/>
    <comment>Ruby project file</comment>
    <glob pattern="*.rubyproject"/>
  </mime-type>

  <mime-type type="text/x-ruby">
    <sub-class-of type="text/plain"/>
    <comment>Ruby source file</comment>
    <glob pattern="*.rb"/>
    <glob pattern="config.ru"/>
    <glob pattern="Gemfile"/>
    <glob pattern="Rakefile"/>
  </mime-type>
</mime-info>
